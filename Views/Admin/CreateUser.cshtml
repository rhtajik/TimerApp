@model TimerApp.Models.User
@{
    ViewData["Title"] = "Ny medarbejder";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm p-4 rounded-4">
            <h4 class="mb-4 text-center fw-bold">
                <i class="bi bi-person-plus text-danger me-2"></i>Ny medarbejder
            </h4>

            <form asp-action="CreateUser">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-600">Navn</label>
                    <input asp-for="Name" class="form-control" placeholder="F.eks. Jens Jensen" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-600">E-mail</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="navn@rh.dk" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- PASSWORD FELT TILFØJET -->
                <div class="mb-3">
                    <label class="form-label fw-600">Adgangskode</label>
                    <input type="password" class="form-control" name="PasswordHash" placeholder="Indtast adgangskode" required />
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsAdmin" class="form-check-input" id="adminCheck" />
                    <label class="form-check-label" for="adminCheck">Admin-bruger</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill">
                    <i class="bi bi-check-circle me-2"></i>Opret
                </button>

                <div class="text-center mt-3">
                    <a class="btn btn-sm btn-outline-secondary rounded-pill px-3" asp-action="Index">
                        <i class="bi bi-x-circle me-1"></i>Annuller
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>