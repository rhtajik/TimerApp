@model TimerApp.ViewModels.CreateUserVM
@{
    ViewData["Title"] = "Opret ny medarbejder";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 rounded-4">
            <h4 class="mb-4 text-center fw-bold">
                <i class="bi bi-person-plus text-success me-2"></i>Opret ny medarbejder
            </h4>

            @if (TempData["TempPassword"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h6 class="alert-heading"><i class="bi bi-key-fill me-2"></i>Midlertidig adgangskode</h6>
                    <p class="mb-0"><strong class="fs-4">@TempData["TempPassword"]</strong></p>
                    <p class="mb-0 small">For: <strong>@TempData["NewUserEmail"]</strong></p>
                    <p class="mb-0 small text-danger"><i class="bi bi-exclamation-triangle-fill me-1"></i>Gem denne nu! Den vises kun én gang.</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="CreateUser">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-600">Navn</label>
                    <input asp-for="Name" class="form-control" placeholder="F.eks. Jens Jensen" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-600">E-mail</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="navn@rh.dk" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsAdmin" class="form-check-input" id="adminCheck" />
                    <label class="form-check-label" for="adminCheck">Admin-bruger</label>
                </div>

                <button type="submit" class="btn btn-success w-100 rounded-pill">
                    <i class="bi bi-person-plus me-2"></i>Opret med automatisk adgangskode
                </button>

                <div class="text-center mt-3">
                    <a class="btn btn-sm btn-outline-secondary rounded-pill px-3" asp-action="Index">
                        <i class="bi bi-x-circle me-1"></i>Annuller
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>