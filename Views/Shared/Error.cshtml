@model ErrorViewModel
@{
    ViewData["Title"] = "Fejl";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm rounded-4 p-4 text-center">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
            <h2 class="fw-bold mt-3">Ups – noget gik galt</h2>
            <p class="text-muted">Vi kunne ikke behandle din forespørgsel. Prøv igen om et øjeblik.</p>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-light mt-3">
                    <strong>Fejl-ID:</strong> <code>@Model.RequestId</code>
                </div>
            }

            <a class="btn btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-1"></i>Tilbage til forsiden
            </a>
        </div>
    </div>
</div>