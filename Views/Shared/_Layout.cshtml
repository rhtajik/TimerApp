<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – RH Timer</title>

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Topbar -->
    <nav class="navbar navbar-expand-sm navbar-dark shadow-sm" style="background-color:#e2001a;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-clock-history me-2"></i>RH Timer
            </a>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="d-flex align-items-center text-white">
                    <span class="me-2 d-none d-sm-block">@User.Identity.Name</span>
                    <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-1"></i>Log af
                    </a>
                </div>
            }
        </div>
    </nav>

    <!-- Main content -->
    <main class="flex-grow-1 container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-3 bg-white border-top text-center text-muted small">
        &copy; @DateTime.Now.Year – Rahmatullah Habib
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>