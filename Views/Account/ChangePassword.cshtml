@model TimerApp.ViewModels.ChangePasswordVM
@{
    ViewData["Title"] = "Skift adgangskode";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm rounded-4 p-4">
            <h4 class="mb-4 text-center fw-bold">Skift adgangskode</h4>

            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="mb-3">
                    <label asp-for="OldPassword" class="form-label">Nuværende kode</label>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Din nuværende kode" />
                    <span asp-validation-for="OldPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Ny kode (min. 6 tegn)</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Ny kode" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Gentag ny kode</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Gentag ny kode" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill">
                    <i class="bi bi-key me-2"></i>Gem ny kode
                </button>
            </form>

            <div class="text-center mt-3">
                <a class="btn btn-sm btn-outline-secondary rounded-pill px-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-1"></i>Tilbage til forsiden
                </a>
            </div>
        </div>
    </div>
</div>