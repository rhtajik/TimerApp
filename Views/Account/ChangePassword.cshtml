@model TimerApp.ViewModels.ChangePasswordVM
@{
    ViewData["Title"] = ViewBag.FirstLogin ? "Vælg ny adgangskode" : "Skift adgangskode";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm p-4 rounded-4">
            <h4 class="mb-4 text-center fw-bold">
                <i class="bi bi-key-fill text-danger me-2"></i>@ViewData["Title"]
            </h4>

            @if (ViewBag.FirstLogin)
            {
                <div class="alert alert-warning small mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Du er logget ind med en midlertidig adgangskode. Vælg din egen adgangskode for at fortsætte.
                </div>
            }

            <form asp-action="ChangePassword" asp-route-firstLogin="@ViewBag.FirstLogin">
                @if (!ViewBag.FirstLogin)
                {
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label fw-600">Nuværende adgangskode</label>
                        <input asp-for="OldPassword" type="password" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label fw-600">Ny adgangskode</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-600">Gentag ny adgangskode</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill">
                    <i class="bi bi-check-circle me-2"></i>@(ViewBag.FirstLogin ? "Gem og fortsæt" : "Skift adgangskode")
                </button>
            </form>
        </div>
    </div>
</div>