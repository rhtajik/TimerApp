@model IEnumerable<TimerApp.Models.TimeEntry>
@{
    ViewData["Title"] = "Mine timer";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-clock-history text-danger me-2"></i>Mine timer
    </h2>
    <a class="btn btn-sm btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Index">
        <i class="bi bi-house-door me-1"></i>Tilbage til forsiden
    </a>
</div>

<div class="card shadow-sm rounded-4 p-3">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Dato</th>
                    <th>Start</th>
                    <th>Slut</th>
                    <th class="text-center">Timer</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("ddd d/M")</td>
                        <td>@item.StartTime.ToString("HH'.'mm")</td>
                        <td>@(item.EndTime?.ToString("HH'.'mm") ?? "-")</td>
                        <td class="text-center">
                            <span class="badge bg-danger rounded-pill">@item.Hours.ToString("F2")</span>
                        </td>
                        <td class="text-end">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Sikker på at slette?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary rounded-pill px-4" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>Tilføj ny
    </a>
</div>