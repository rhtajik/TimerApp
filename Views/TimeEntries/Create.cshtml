@model TimerApp.ViewModels.TimeEntryVM
@{
    ViewData["Title"] = "Registrer timer";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg rounded-4 p-4 bg-white">
            <div class="text-center mb-4">
                <i class="bi bi-clock-history text-danger" style="font-size: 3rem;"></i>
                <h4 class="fw-bold mt-2">Registrer timer</h4>
            </div>

            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-600">Dato</label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="row g-3">
                    <div class="col">
                        <label class="form-label fw-600">Start tid</label>
                        <input asp-for="StartTime" class="form-control" type="time" step="60" />
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                    </div>
                    <div class="col">
                        <label class="form-label fw-600">Slut tid</label>
                        <input asp-for="EndTime" class="form-control" type="time" step="60" />
                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-check-circle me-2"></i>Gem
                    </button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a class="btn btn-sm btn-outline-secondary rounded-pill px-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-1"></i>Tilbage til forsiden
                </a>
            </div>
        </div>
    </div>
</div>