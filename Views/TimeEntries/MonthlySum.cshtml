@{
    ViewData["Title"] = "Månedssum";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-calendar-month text-success me-2"></i>Månedssum
    </h2>
    <a class="btn btn-sm btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Index">
        <i class="bi bi-house-door me-1"></i>Tilbage til forsiden
    </a>
</div>

<div class="card shadow-sm rounded-4 p-4 text-center">
    <i class="bi bi-graph-up text-success" style="font-size: 4rem;"></i>
    <h3 class="mt-3 mb-1">@ViewBag.Sum</h3>
    <p class="text-muted mb-0">timer registreret i <strong>@DateTime.Now.ToString("MMMM yyyy")</strong></p>

    <div class="mt-4">
        <a class="btn btn-outline-primary rounded-pill px-4" asp-controller="TimeEntries" asp-action="Index">
            <i class="bi bi-list-ul me-2"></i>Tilbage til oversigten
        </a>
    </div>
</div>